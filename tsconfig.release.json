{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "allowUnusedLabels": false,
    "strictNullChecks": true,
    "allowJs": true,
    "lib": ["es6", "es2017"],
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts"
    // "src/**/*.js"
  ],
  "exclude": ["node_modules"]
}
